# Production .htaccess für bessere Sicherheit

# Security Headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"

# HTTPS erzwingen (falls verfügbar)
# RewriteEngine On
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Sensible Dateien schützen
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files ".env.*">
    Order allow,deny
    Deny from all
</Files>

<Files "composer.json">
    Order allow,deny
    Deny from all
</Files>

<Files "composer.lock">
    Order allow,deny
    Deny from all
</Files>

# Upload-Verzeichnis schützen
<Directory "uploads">
    # PHP-Ausführung verhindern
    php_flag engine off
    AddType text/plain .php .php3 .phtml .pht
    
    # Nur bestimmte Dateitypen erlauben
    <FilesMatch "\.(pdf|doc|docx|jpg|jpeg|png)$">
        Order allow,deny
        Allow from all
    </FilesMatch>
    
    <FilesMatch "^(?!.*\.(pdf|doc|docx|jpg|jpeg|png)$).*">
        Order allow,deny
        Deny from all
    </FilesMatch>
</Directory>

# Logs schützen
<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Vendor-Verzeichnis schützen (falls im Web-Root)
<Directory "vendor">
    Order allow,deny
    Deny from all
</Directory>